[Unit]
Description=Zookeeper service

[Service]
User={{ amq_streams_user }}
Group={{ amq_streams_group }}

Environment=JAVA_HOME={{ amq_streams_java_home }}
Environment=LOG_DIR={{ amq_streams_zookeeper_log_dir }}
ExecStart={{ amq_streams_home_dir }}/bin/zookeeper-server-start.sh {{ amq_streams_zookeeper_config_file }}
ExecStop={{ amq_streams_home_dir }}/bin/zookeeper-server-stop.sh

[Install]
WantedBy=multi-user.target